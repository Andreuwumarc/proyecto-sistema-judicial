<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Sistema Judicial</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- Tailwind CSS vía CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <!-- Fuente greco-romana Cinzel -->
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&display=swap" rel="stylesheet">
    <!-- icono de la balanza -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Estilos propios -->
    <link rel="stylesheet" href="~/css/homepagelayout.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-transparent custom-navbar">
        <div class="container-fluid">
            <a class="navbar-brand text-light" href="#"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link text-light" asp-controller="Home" asp-action="Home">Inicio</a></li>
                    <!-- <li class="nav-item"><a class="nav-link text-light" asp-controller="IngresarDenuncia" asp-action="CrearDenuncia"> Realizar denuncia</a></li> -->
                    <li class="nav-item">
                        <a class="nav-link custom-login-btn ms-2" asp-controller="Home" asp-action="Login">Iniciar Sesión</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>


    <main class="flex-grow w-100 p-0 m-0">
        @RenderBody()
    </main>

    <footer class="bg-gray-100 text-center py-4 border-t mt-auto">
        <div class="container text-gray-600 text-sm">
            &copy; 2025 - Sistema Judicial -
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-blue-600 hover:underline">Privacidad</a>
        </div>
    </footer>

</body>
</html>