@model SistemaGestionJudicial.Models.Juicio

@{
    ViewData["Title"] = "Eliminar Juicio";
}

@section Styles {
    <link rel="stylesheet" href="~/css/casos.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">¿Estás seguro que deseas eliminar este juicio?</h2>
        <a asp-action="Index" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg">
            <i class="fas fa-arrow-left mr-2"></i> Volver
        </a>
    </div>

    <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-xl mx-auto">
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
            <div>
                <dt class="text-sm font-medium text-gray-600">Fecha de Inicio</dt>
                <dd class="text-gray-900">@Model.FechaInicio</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Fecha de Fin</dt>
                <dd class="text-gray-900">@Model.FechaFin</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Estado</dt>
                <dd class="text-gray-900">@Model.Estado</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Denuncia</dt>
                <dd class="text-gray-900">@Model.IdDenunciaNavigation?.IdDenuncia</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-600">Juez</dt>
                <dd class="text-gray-900">@Model.IdPersonaJuezNavigation?.Nombres @Model.IdPersonaJuezNavigation?.Apellidos</dd>
            </div>
        </dl>

        <form asp-action="Delete" class="mt-6 flex justify-end items-center space-x-4">
            <input type="hidden" asp-for="IdJuicio" />
            <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg">
                <i class="fas fa-trash mr-2"></i> Eliminar
            </button>
            <a asp-action="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg">
                Cancelar
            </a>
        </form>
    </div>
</div>