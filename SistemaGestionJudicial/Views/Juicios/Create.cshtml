@model SistemaGestionJudicial.Models.Juicio

@{
    ViewData["Title"] = "Crear Juicio";
}

@section Styles {
    <link rel="stylesheet" href="~/css/casos.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

<div class="p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Crear Juicio</h2>
        <a asp-action="Index" class="text-blue-600 hover:underline flex items-center">
            <i class="fas fa-arrow-left mr-1"></i> Volver a la lista
        </a>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Create" class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div asp-validation-summary="ModelOnly" class="text-red-600 col-span-full"></div>

            <div>
                <label asp-for="IdJuicio" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="IdJuicio" class="form-input" />
                <span asp-validation-for="IdJuicio" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="FechaInicio" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="FechaInicio" class="form-input" type="date" />
                <span asp-validation-for="FechaInicio" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="FechaFin" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="FechaFin" class="form-input" type="date" />
                <span asp-validation-for="FechaFin" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="IdDenuncia" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="IdDenuncia" asp-items="ViewBag.IdDenuncia" class="form-input"></select>
            </div>

            <div>
                <label asp-for="IdPersonaJuez" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="IdPersonaJuez" asp-items="ViewBag.IdPersonaJuez" class="form-input"></select>
            </div>

            <div class="md:col-span-2">
                <label asp-for="Estado" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Estado" class="form-input" placeholder="Ej. Programado" />
                <span asp-validation-for="Estado" class="text-red-500 text-sm"></span>
            </div>

            <div class="col-span-full flex justify-end mt-4">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg">
                    <i class="fas fa-save mr-2"></i> Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}