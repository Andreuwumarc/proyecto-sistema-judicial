                <!-- Prosecutors Table -->
                <div class="card bg-white rounded-lg p-6">
                    <div class="overflow-x-auto">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Cédula</th>
                                    <th>Asignado el</th>
                                    <th>Fiscal a cargo</th>
                                    <th>Teléfono</th>
                                    <th>Correo Electrónico</th>
                                    <th>Descripción</th>
                                    <th>Lugar de los hechos</th>
                                    <th>Gravedad</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var f in Model)
                                {
                                    <tr>
                                        <td>@f.IdPersonaFiscal</td>
                                        <td>@f.IdPersonaFiscalNavigation.Cedula</td>
                                        <td>@f.FechaAsignacion</td>
                                        <td>@f.IdPersonaFiscalNavigation.Nombres @f.IdPersonaFiscalNavigation.Apellidos</td>
                                        <td>@f.IdPersonaFiscalNavigation.Telefono</td>
                                        <td>@f.IdPersonaFiscalNavigation.CorreoElectronico</td>
                                        <td>@f.IdDenunciaNavigation.Descripcion</td>
                                        <td>@f.IdDenunciaNavigation.LugarHecho</td>
                                        <td>@f.IdDenunciaNavigation.IdDelitoNavigation.GravedadDelito</td>
                                        <td>
                                            <button onclick="openDetailModal('@f.IdPersonaFiscal', '@f.IdPersonaFiscalNavigation.Cedula',
                                                '@f.IdPersonaFiscalNavigation.Nombres','@f.IdPersonaFiscalNavigation.Apellidos',
                                                '@f.IdPersonaFiscalNavigation.FechaNacimiento', '@f.IdPersonaFiscalNavigation.Genero',
                                                '@f.IdPersonaFiscalNavigation.Direccion', '@f.IdPersonaFiscalNavigation.Telefono',
                                                '@f.IdPersonaFiscalNavigation.CorreoElectronico', '@f.IdDenunciaNavigation.IdDenuncia',
                                                '@f.FechaAsignacion')" class="text-blue-600 hover:text-blue-800 mr-2">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button onclick="openEditModal(
                                                        '@f.IdPersonaFiscal',
                                                        '@f.IdPersonaFiscalNavigation.IdPersona',
                                                        '@f.IdPersonaFiscalNavigation.Cedula' ,
                                                        '@f.IdPersonaFiscalNavigation.Nombres' ,
                                                        '@f.IdPersonaFiscalNavigation.Apellidos' ,
                                                        '@(f.IdPersonaFiscalNavigation.FechaNacimiento?.ToString("yyyy-MM-dd") ?? "")',
                                                        '@f.IdPersonaFiscalNavigation.Genero' ,
                                                        '@f.IdPersonaFiscalNavigation.Direccion' ,
                                                        '@f.IdPersonaFiscalNavigation.Telefono' ,
                                                        '@f.IdPersonaFiscalNavigation.CorreoElectronico' ,
                                                        '@f.IdDenunciaNavigation.IdDenuncia',
                                                        '@(f.FechaAsignacion?.ToString("yyyy-MM-dd") ?? "")')" class="text-green-600 hover:text-green-800 mr-2">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button onclick="openDeleteModal(
                                                            '@f.IdPersonaFiscal',
                                                            '@f.IdPersonaFiscalNavigation.IdPersona',
                                                            '@f.IdPersonaFiscalNavigation.Nombres' ,
                                                            '@f.IdPersonaFiscalNavigation.Apellidos')" class="text-red-600 hover:text-red-800">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Prosecutor Modal -->
    <div id="modalAdd" class="modal hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center">
        <div class="modal-content bg-white rounded-lg p-6 w-96">
            <h3 class="text-lg font-bold mb-4">Añadir Fiscal</h3>
            <form asp-action="CreateFiscal" asp-controller="Fiscales" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-4">
                    <label for="addcedula" class="block text-sm font-medium text-gray-700">Cédula</label>
                    <input type="text" name="addcedula" id="addcedula" class="form-input" required>
                </div>
                <div class="mb-4">
                    <label for="addnombres" class="block text-sm font-medium text-gray-700">Nombres</label>
                    <input type="text" name="addnombres" id="addnombres" class="form-input" required>
                </div>
                <div class="mb-4">
                    <label for="addapellidos" class="block text-sm font-medium text-gray-700">Apellidos</label>
                    <input type="text" name="addapellidos" id="addapellidos" class="form-input" required>
                </div>
                <div class="mb-4">
                    <label for="addnacimiento" class="block text-sm font-medium text-gray-700">Fecha de Nacimiento</label>
                    <input type="date" name="addnacimiento" id="addnacimiento" class="form-input">
                </div>
                <div class="mb-4">
                    <label for="addgenero" class="block text-sm font-medium text-gray-700">Género</label>
                    <select name="addgenero" id="addgenero" class="form-input">
                        <option value="">Seleccionar</option>
                        <option value="M">Hombre</option>
                        <option value="F">Mujer</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label for="adddireccion" class="block text-sm font-medium text-gray-700">Dirección</label>
                    <input type="text" name="adddireccion" id="adddireccion" class="form-input">
                </div>
                <div class="mb-4">
                    <label for="addtelefono" class="block text-sm font-medium text-gray-700">Teléfono</label>
                    <input type="text" name="addtelefono" id="addtelefono" class="form-input">
                </div>
                <div class="mb-4">
                    <label for="addcorreoelectronico" class="block text-sm font-medium text-gray-700">Correo electrónico</label>
                    <input type="text" name="addcorreoelectronico" id="addcorreoelectronico" class="form-input">
                </div>
                <div class="mb-4">
                    <label for="IdDenuncia" class="block text-sm font-medium text-gray-700">Denuncia a cargo</label>
                    <input type="number" name="IdDenuncia" id="IdDenuncia" class="form-input" required>
                </div>
                <div class="mb-4">
                    <label for="addfechadenuncia" class="block text-sm font-medium text-gray-700">Fecha a Asignar</label>
                    <input type="date" name="addfechadenuncia" id="addfechadenuncia" class="form-input">
                </div>
                <div class="flex justify-end">
                    <button type="button" onclick="closeModal('modalAdd')" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2">Cancelar</button>
                    <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Añadir Fiscal</button>
                </div>
            </form>
        </div>
    </div>



