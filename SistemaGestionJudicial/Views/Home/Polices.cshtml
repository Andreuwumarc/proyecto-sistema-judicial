@{
    ViewData["Title"] = "Partes Policiales";

    var partes = new[]
    {
        new { IdParte = 1, FechaParte = DateTime.Now.AddDays(-1), NombrePolicia = "Oficial Pérez", Descripcion = "Reporte de incidente menor", DenunciaResumen = "Denuncia #12345" },
        new { IdParte = 2, FechaParte = DateTime.Now, NombrePolicia = "Sargento Gómez", Descripcion = "Reporte de accidente", DenunciaResumen = "Denuncia #12346" }
    };
}

@section Styles {
    <link rel="stylesheet" href="~/css/partespoliciales.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
}

<div class="flex h-screen overflow-hidden">
    <div class="flex-1 overflow-auto">
        <header class="bg-white shadow-sm py-4 px-6 flex justify-between items-center no-print">
            <h2 class="text-xl font-semibold text-gray-800" id="view-title">Gestión de Partes Policiales</h2>
        </header>

        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-bold">Partes Policiales</h2>
                <button onclick="openModal('add-parte-modal')"
                        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center">
                    <i class="fas fa-plus mr-2"></i> Agregar Parte
                </button>
            </div>

            <div class="card bg-white rounded-lg p-6">
                <div class="overflow-x-auto">
                    <table class="data-table w-full border-collapse border border-gray-300">
                        <thead>
                            <tr class="bg-gray-100">
                                <th class="border border-gray-300 px-4 py-2">ID</th>
                                <th class="border border-gray-300 px-4 py-2">Fecha</th>
                                <th class="border border-gray-300 px-4 py-2">Policía</th>
                                <th class="border border-gray-300 px-4 py-2">Descripción</th>
                                <th class="border border-gray-300 px-4 py-2">Denuncia Asociada</th>
                                <th class="border border-gray-300 px-4 py-2">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var parte in partes)
                            {
                                <tr>
                                    <td class="border border-gray-300 px-4 py-2">@parte.IdParte</td>
                                    <td class="border border-gray-300 px-4 py-2">@parte.FechaParte.ToShortDateString()</td>
                                    <td class="border border-gray-300 px-4 py-2">@parte.NombrePolicia</td>
                                    <td class="border border-gray-300 px-4 py-2">@parte.Descripcion</td>
                                    <td class="border border-gray-300 px-4 py-2">@parte.DenunciaResumen</td>
                                    <td class="border border-gray-300 px-4 py-2">
                                        <button class="text-blue-600 hover:text-blue-800 mr-2" onclick="openDetailModal('@parte.IdParte')">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="text-green-600 hover:text-green-800 mr-2">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="text-red-600 hover:text-red-800">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para agregar parte -->
<div id="add-parte-modal"
     class="modal hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center">
    <div class="modal-content bg-white rounded-lg p-6 w-96">
        <h3 class="text-lg font-bold mb-4">Agregar Parte Policial</h3>
        <form id="addParteForm">
            <div class="mb-4">
                <label for="fechaParte" class="block text-sm font-medium text-gray-700">Fecha</label>
                <input type="date" id="fechaParte" class="form-input" required />
            </div>
            <div class="mb-4">
                <label for="descripcionParte" class="block text-sm font-medium text-gray-700">Descripción</label>
                <textarea id="descripcionParte" class="form-input" required></textarea>
            </div>
            <div class="mb-4">
                <label for="policia" class="block text-sm font-medium text-gray-700">Policía</label>
                <select id="policia" class="form-input" required>
                    <option value="">Seleccione</option>
                </select>
            </div>
            <div class="mb-4">
                <label for="denuncia" class="block text-sm font-medium text-gray-700">Denuncia Asociada</label>
                <select id="denuncia" class="form-input" required>
                    <option value="">Seleccione</option>
                </select>
            </div>
            <div class="flex justify-end">
                <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2"
                        onclick="closeModal('add-parte-modal')">
                    Cancelar
                </button>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Guardar</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openModal(modalId) {
        document.getElementById(modalId).classList.remove('hidden');
    }

    function closeModal(modalId) {
        document.getElementById(modalId).classList.add('hidden');
    }

    document.getElementById('addParteForm').addEventListener('submit', function (e) {
        e.preventDefault();
        alert('Parte policial agregado exitosamente.');
        closeModal('add-parte-modal');
    });
</script>
