@model SistemaGestionJudicial.Models.PartePolicial

@{
    ViewData["Title"] = "Editar Parte Policial";
}

@section Styles {
    <script src="https://cdn.tailwindcss.com"></script>
}

<div class="max-w-xl mx-auto mt-10 p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6">Editar Parte Policial</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id_Parte" />

        <div class="mb-4">
            <label asp-for="Fecha_Parte" class="block text-gray-700 font-semibold mb-2">Fecha</label>
            <input asp-for="Fecha_Parte" type="date" class="w-full px-4 py-2 border rounded-md" />
        </div>

        <div class="mb-4">
            <label asp-for="Descripcion" class="block text-gray-700 font-semibold mb-2">Descripción</label>
            <textarea asp-for="Descripcion" class="w-full px-4 py-2 border rounded-md"></textarea>
        </div>

        <div class="mb-4">
            <label asp-for="Id_Persona_Policia" class="block font-semibold">Policía</label>
            <select asp-for="Id_Persona_Policia" asp-items="ViewBag.Personas" class="form-select w-full border rounded-md px-4 py-2">
                <option value="">Seleccione un policía</option>
            </select>
        </div>

        <div class="mb-4">
            <label asp-for="Id_Denuncia" class="block font-semibold">Denuncia</label>
            <select asp-for="Id_Denuncia" asp-items="ViewBag.Denuncias" class="form-select w-full border rounded-md px-4 py-2">
                <option value="">Seleccione una denuncia</option>
            </select>
        </div>

        <div class="flex justify-end">
            <a asp-action="Polices" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2">Cancelar</a>
            <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-lg">Guardar Cambios</button>
        </div>
    </form>
</div>
