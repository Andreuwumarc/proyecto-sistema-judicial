<!-- Add Crime Modal -->
<div id="add-crime-modal"
     class="modal hidden fixed inset-0 bg-gray-800 bg-opacity-50 flex items-center justify-center">
    <div class="modal-content bg-white rounded-lg p-6 w-96">
        <h3 class="text-lg font-bold mb-4">Add New Crime</h3>
        <form id="addCrimeForm">
            <div class="mb-4">
                <label for="crimeType" class="block text-sm font-medium text-gray-700">Crime Type</label>
                <input type="text" id="crimeType" class="form-input" required>
            </div>
            <div class="mb-4">
                <label for="crimeDate" class="block text-sm font-medium text-gray-700">Date</label>
                <input type="date" id="crimeDate" class="form-input" required>
            </div>
            <div class="mb-4">
                <label for="crimeLocation" class="block text-sm font-medium text-gray-700">Location</label>
                <input type="text" id="crimeLocation" class="form-input" required>
            </div>
            <div class="mb-4">
                <label for="offenderNames" class="block text-sm font-medium text-gray-700">Offender(s)</label>
                <input type="text" id="offenderNames" class="form-input" placeholder="Separate with commas"
                       required>
            </div>
            <div class="mb-4">
                <label for="crimeSeverity" class="block text-sm font-medium text-gray-700">Severity</label>
                <select id="crimeSeverity" class="form-input" required>
                    <option value="">Select Severity</option>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                    <option value="critical">Critical</option>
                </select>
            </div>
            <div class="flex justify-end">
                <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded-lg mr-2"
                        onclick="closeModal('add-crime-modal')">
                    Cancel
                </button>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Add Crime</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openModal(modalId) {
        document.getElementById(modalId).classList.remove('hidden');
    }

    function closeModal(modalId) {
        document.getElementById(modalId).classList.add('hidden');
    }

    document.getElementById('addCrimeForm').addEventListener('submit', function (e) {
        e.preventDefault();
        // Logic to add crime goes here
        closeModal('add-crime-modal');
        alert('Crime added successfully!');
    });
</script>