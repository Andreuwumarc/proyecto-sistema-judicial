@{  
    Layout = "~/Views/Shared/LayoutPublico.cshtml";
    ViewData["Title"] = "Ingresar denuncia";
}

<div class="min-h-screen bg-cover bg-center bg-no-repeat py-12 px-4"
     style="background-image: url('/images/Maccari-Cicero.jpg');">

    <div class="bg-white bg-opacity-90 shadow-2xl rounded-xl max-w-4xl mx-auto p-8">
        <h2 class="text-4xl font-bold text-blue-900 text-center mb-8 font-serif">@ViewData["Title"]</h2>

        <form method="post" enctype="multipart/form-data" class="space-y-6">

            <!-- DATOS DEL DENUNCIANTE -->
            <div>
                <h3 class="text-2xl font-semibold text-blue-800 border-b pb-2 mb-4">Datos del Denunciante</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Nombre</label>
                        <input type="text" name="nombreDenunciante"
                               class="w-full border border-gray-300 rounded px-4 py-2 focus:ring-2 focus:ring-blue-500" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Cédula</label>
                        <input type="text" name="cedulaDenunciante"
                               class="w-full border border-gray-300 rounded px-4 py-2" required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Teléfono</label>
                        <input type="tel" name="telefono"
                               class="w-full border border-gray-300 rounded px-4 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                        <input type="email" name="correo"
                               class="w-full border border-gray-300 rounded px-4 py-2">
                    </div>
                </div>
            </div>

            <!-- DATOS DEL DENUNCIADO -->
            <div>
                <h3 class="text-2xl font-semibold text-blue-800 border-b pb-2 mb-4">Datos del Denunciado</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Nombre (si se conoce)</label>
                        <input type="text" name="nombreDenunciado"
                               class="w-full border border-gray-300 rounded px-4 py-2">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Dirección</label>
                        <input type="text" name="direccionDenunciado"
                               class="w-full border border-gray-300 rounded px-4 py-2">
                    </div>
                </div>
            </div>

            <!-- DETALLES DE LA DENUNCIA -->
            <div>
                <h3 class="text-2xl font-semibold text-blue-800 border-b pb-2 mb-4">Detalles de la Denuncia</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Tipo de delito</label>
                        <select name="tipoDelito"
                                class="w-full border border-gray-300 rounded px-4 py-2 bg-white" required>
                            <option disabled selected>Seleccione un delito</option>
                            <option value="1">Robo</option>
                            <option value="2">Agresión</option>
                            <option value="3">Acoso</option>
                            <option value="4">Violencia intrafamiliar</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Fecha del hecho</label>
                        <input type="date" name="fechaHecho"
                               class="w-full border border-gray-300 rounded px-4 py-2" required>
                    </div>
                </div>
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Lugar del hecho</label>
                    <input type="text" name="lugarHecho"
                           class="w-full border border-gray-300 rounded px-4 py-2" required>
                </div>
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Descripción</label>
                    <textarea name="descripcion" rows="4"
                              class="w-full border border-gray-300 rounded px-4 py-2" required></textarea>
                </div>
                <div class="mt-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Adjuntar evidencia (opcional)</label>
                    <input type="file" name="evidencias" class="w-full text-sm text-gray-600">
                </div>
            </div>

            <!-- OPCIONES -->
            <div class="flex items-center">
                <input type="checkbox" name="anonima" id="anonima" class="mr-2">
                <label for="anonima" class="text-sm text-gray-700">Enviar como denuncia anónima</label>
            </div>

            <!-- BOTÓN -->
            <div class="text-right">
                <button type="submit"
                        class="bg-blue-700 hover:bg-blue-800 text-white font-semibold px-6 py-2 rounded shadow">
                    Enviar Denuncia
                </button>
            </div>

        </form>
    </div>
</div>
